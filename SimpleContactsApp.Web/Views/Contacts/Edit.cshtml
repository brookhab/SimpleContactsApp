@using System.Security.Claims;
@model SimpleContactsApp.Domain.Entities.Contact

@{
    ViewData["Title"] = "Edit Contact";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="container mt-5">
    <h1 class="text-center mb-4">Edit Contact</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" asp-controller="Contacts" asp-action="Edit" asp-route-id="@Model.Id" class="border p-4 rounded bg-white">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />
                <input type="hidden" asp-for="User" value="@User.Identity.Name" />

                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Phone">Phone</label>
                    <input type="tel" asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-3">Save</button>
            </form>

            <div class="mt-3 text-center">
                <a asp-controller="Contacts" asp-action="Index" class="btn btn-secondary btn-block">Back to List</a>
            </div>
        </div>
    </div>
</div>
